name: mobina
services:
  web:
    build: .
    ports:
      - "5000"
    deploy:
      replicas: 4
    depends_on:
      - mysql-master
 
  mysql-master:
    image: mysql
    container_name: mysql-master
    restart: unless-stopped
    cap_add:
      - all
    volumes:
      - ./initialdb:/docker-entrypoint-initdb.d
      - ./database/master/data:/etc/mysql/mysql.conf.d/
      - ./data/master/data:/var/lib/mysql
      - ./data/master/log:/var/log/mysql
      - ./data/master/backup:/backup
    environment:
      - MYSQL_ROOT_PASSWORD=Pass
      - MYSQL_USER=mobina
      - MYSQL_PASSWORD=Pass2

  mysql-slave:
    image: mysql
    container_name: mysql-slave
    restart: unless-stopped
    cap_add:
      - all
    volumes:
      - ./initialslave:/docker-entrypoint-initdb.d
      - ./database/slave/data:/etc/mysql/mysql.conf.d/
    environment:
      - MYSQL_ROOT_PASSWORD=Pass
      - MYSQL_USER=mobina
      - dMYSQL_PASSWORD=Pass2
    depends_on:
      - mysql-master
    
  # mysql: 
  #   container_name: sqlserver
  #   image: mysql
  #   environment:
  #     MYSQL_ROOT_PASSWORD: "Pass"
  #     MYSQL_USER: mobina
  #     MYSQL_PASSWORD: Pass2
  #   volumes:
  #     - ./initialdb:/docker-entrypoint-initdb.d
  #     - ./database:/var/lib/mysql

  nginx: 
    container_name: nginx
    image: nginx
    ports:
      - 8888:80
    depends_on:
      - mysql-master
      - web
    restart: unless-stopped
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf